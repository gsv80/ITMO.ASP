
@model ASP.ExamTask_v1._1.Models.Grade
@{
    ViewBag.Title = "Система баллов";
}

<h2>@ViewBag.Title</h2>




@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4></h4>
        <hr />
        @Html.ValidationSummary(true, "Данные  введены некорректно", new { @class = "text-danger" })
        <div class="form-group">

            <p>Наименование оценки/балла</p>
            <div class="col-md-10">
                @Html.EditorFor(model => model.GradeDescr, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.GradeDescr, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">

            <p>Оценка в баллах</p>
            <div class="col-md-10">
                @Html.EditorFor(model => model.GradeValue, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.GradeValue, "", new { @class = "text-danger" })
            </div>
        </div>
        <br />
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Добавить" class="btn btn-default" />
            </div>
        </div>
    </div>

}
