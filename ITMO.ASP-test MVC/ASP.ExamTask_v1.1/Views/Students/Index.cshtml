
@model IEnumerable<ASP.ExamTask_v1._1.Models.Student>

@{
    ViewBag.Title = "Табель студентов";
}

<h2>@ViewBag.Title</h2>

<div>
    <h4>Группа </h4>
    <hr />
    <table class="table">
        <caption>@ViewBag.Title</caption>
        <tr>
            <th>
                Имя
            </th>
            <th>
                 Фамилия
            </th>
            <th>
                Баллы
            </th>
            
        </tr>>


       
        <tbody>
            @foreach (var item in Model)
            {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.FirstName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LastName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Grade.GradeValue)
                </td>
            </tr>
                
            }
            </tbody>
        

    </table>
</div>
<p></p>


