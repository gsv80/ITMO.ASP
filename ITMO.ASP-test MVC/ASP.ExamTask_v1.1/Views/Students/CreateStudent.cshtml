@model ASP.ExamTask_v1._1.Models.Student

@{
    ViewBag.Title = "Добавить студента";
}

<h2>@ViewBag.Title</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">
    <h4></h4>
    <hr />
    @Html.ValidationSummary(true, "Данные  введены некорректно", new { @class = "text-danger" })
    <div class="form-group">

        <p>Имя</p>
        <div class="col-md-10">
            @Html.EditorFor(model => model.FirstName, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.FirstName, "*Обязательное поле", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">

        <p>Фамилия</p>
        <div class="col-md-10">
            @Html.EditorFor(model => model.LastName, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.LastName, "*Обязательное поле", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">

        <p>Баллы/Оценка</p>
        <div class="col-md-10">
            @Html.EditorFor(model => model.Grade.GradeValue, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Grade.GradeValue, "", new { @class = "text-danger" })
        </div>
    </div>
    <br />
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Добавить" class="btn btn-default" />
        </div>
    </div>
</div>

}
